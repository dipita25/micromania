<div class="container">

  <div class="row">
    <div class="col-6 mt-3">
      <h2>Detail du Jeu </h2>

      <p>Nom : <strong><%= @game.name %></strong></p>
      <p>Prix : <strong><%= @game.price %></strong></p>
      <p>Plateforme : <strong><%= @game.platform %></strong></p>

      <p> <%= link_to "Louer", new_booking_path, class: "btn btn-primary" %></p>

      <p> <%= link_to "Retour Ã  l'Accueil", root_path, class: "btn btn-primary" %></p>

