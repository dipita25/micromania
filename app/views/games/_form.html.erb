<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= simple_form_for(@game) do |f| %>
        <%= f.input :name %>
        <%= f.input :price %>
        <%= f.input :platform %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
